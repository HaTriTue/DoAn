@model WebApplication3.Models.Voucher

@{
    ViewBag.Title = "Chi tiết Voucher";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<!-- Font Awesome for icons -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css">

<div class="container d-flex justify-content-center align-items-center" style="min-height: 80vh;">
    <div class="card shadow-lg border-0 p-4" style="width: 30rem; border-radius: 12px;">
        <div class="card-body text-center">
            <h4 class="card-title text-danger fw-bold">
                🎟️ Chi tiết Voucher 🎟️
            </h4>
            <hr />

            <div class="mb-3">
                <h5 class="text-primary"><i class="fas fa-barcode"></i> Mã Code:</h5>
                <p class="fw-bold">@Html.DisplayFor(model => model.Code)</p>
            </div>

            <div class="mb-3">
                <h5 class="text-success"><i class="fas fa-percent"></i> % Giảm Giá:</h5>
                <p class="fw-bold">@Html.DisplayFor(model => model.DiscountPercent)%</p>
            </div>

            <a href="@Url.Action("Index", "UserVoucher")" class="btn btn-secondary fw-bold px-4" style="border-radius: 10px;">
                <i class="fas fa-arrow-left"></i> Quay lại danh sách
            </a>
        </div>
    </div>
</div>
