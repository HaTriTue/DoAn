@model WebApplication3.Models.OrderDetail

@{
    ViewBag.Title = "Order Details";
    Layout = "~/Areas/Admin/Views/Shared/_MainLayOutADMIN.cshtml";
}

<div style="margin-left: 300px; width: 50%; background-color: floralwhite; font-family: 'Times New Roman', Times, serif; color: #333; padding: 20px; border-radius: 8px;">
    <h2>Order Details</h2>
    <hr />

    <dl class="dl-horizontal">
        <dt>@Html.DisplayNameFor(model => model.Product.NamePro)</dt>
        <dd>@Html.DisplayFor(model => model.Product.NamePro)</dd>

        <dt>@Html.DisplayNameFor(model => model.Quantity)</dt>
        <dd>@Html.DisplayFor(model => model.Quantity)</dd>

        <dt>@Html.DisplayNameFor(model => model.UnitPrice)</dt>
        <dd>@Html.DisplayFor(model => model.UnitPrice) VND</dd>

        <dt>@Html.DisplayNameFor(model => model.SubTotal)</dt>
        <dd>@Html.DisplayFor(model => model.SubTotal) VND</dd>

        <dt>@Html.DisplayNameFor(model => model.DiscountAmount)</dt>
        <dd>@Html.DisplayFor(model => model.DiscountAmount) VND</dd>

        <dt>@Html.DisplayNameFor(model => model.Note)</dt>
        <dd>@Html.DisplayFor(model => model.Note)</dd>

        <dt>@Html.DisplayNameFor(model => model.OrderPro.AddressDelivery)</dt>
        <dd>@Html.DisplayFor(model => model.OrderPro.AddressDelivery)</dd>
    </dl>

    @using (Html.BeginForm("Delete", "OrderDetail", FormMethod.Post))
    {
        @Html.AntiForgeryToken()

        <div class="form-actions">
            <input type="submit" value="Delete" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this order detail?');" />
            @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-secondary" })
        </div>
    }
</div>
