@model IEnumerable<WebApplication3.Models.OrderDetail>

@{
    ViewBag.Title = "Danh sách chi tiết đơn hàng";
    Layout = "~/Areas/Admin/Views/Shared/_MainLayOutADMIN.cshtml";
}

<h2 class="text-center" style="font-family: 'Times New Roman'; margin-top: 20px;">Danh sách chi tiết đơn hàng</h2>

<div class="container">
    <div class="table-responsive" style="margin-left:200px">
        <table class="table table-hover table-bordered" style="background-color: white;">
            <thead class="thead-dark">
                <tr class="text-center">
                    <th style="width: 20%;">Tên sản phẩm</th>
                    <th style="width: 10%;">Số lượng</th>
                    <th style="width: 15%;">Đơn giá</th>
                    <th style="width: 15%;">Thành tiền</th>
                    <th style="width: 20%;">Ghi chú</th>
                    <th style="width: 10%;">Thao tác</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.Product.NamePro)</td>
                        <td class="text-center">@Html.DisplayFor(modelItem => item.Quantity)</td>
                        <td class="text-right">@String.Format("{0:0,0}", item.UnitPrice) VND</td>
                        <td class="text-right">@String.Format("{0:0,0}", item.SubTotal) VND</td>
                        <td>@Html.DisplayFor(modelItem => item.Note)</td> <!-- Hiển thị ghi chú -->
                        <td class="text-center">
                            @Html.ActionLink("Chi tiết", "Details", new { id = item.ID }, new { @class = "btn btn-info btn-sm" })
                            @Html.ActionLink("Xóa", "Delete", new { id = item.ID }, new { @class = "btn btn-danger btn-sm", onclick = "return confirm('Bạn có chắc muốn xóa không?');" })
                        </td>
                    </tr>
                }
            </tbody>

        </table>
    </div>
</div>
