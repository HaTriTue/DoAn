@model IEnumerable<WebApplication3.Models.OrderStatusLog>

@{
    ViewBag.Title = "Quản lý Trạng thái Đơn hàng";
    Layout = "~/Areas/Admin/Views/Shared/_MainLayOutADMIN.cshtml";
}

<div class="container my-4" >
    <h2 class="text-center mb-4">Quản lý Trạng thái Đơn hàng</h2>

    <table class="table table-bordered table-striped" style="margin-left:200px">
        <thead class="thead-dark">
            <tr>
                <th>@Html.DisplayNameFor(model => model.StatusOrder)</th>
                <th>@Html.DisplayNameFor(model => model.ChangedAt)</th>
                <th>@Html.DisplayNameFor(model => model.ChangedBy)</th>
                <th>@Html.DisplayNameFor(model => model.OrderPro.AddressDelivery)</th>
                <th>Hành động</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.StatusOrder)</td>
                    <td>@Html.DisplayFor(modelItem => item.ChangedAt)</td>
                    <td>@Html.DisplayFor(modelItem => item.ChangedBy)</td>
                    <td>@Html.DisplayFor(modelItem => item.OrderPro.AddressDelivery)</td>
                    <td>
                        <a class="btn btn-primary btn-sm" href="@Url.Action("Details", new { id = item.LogID })">
                            <i class="bi bi-info-circle"></i> Chi tiết
                        </a>
                        <a class="btn btn-warning btn-sm" href="@Url.Action("Edit", new { id = item.LogID })">
                            <i class="bi bi-pencil"></i> Sửa
                        </a>
                        <a class="btn btn-danger btn-sm" href="@Url.Action("Delete", new { id = item.LogID })" onclick="return confirm('Bạn có chắc chắn muốn xóa không?')">
                            <i class="bi bi-trash"></i> Xóa
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

