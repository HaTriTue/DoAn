@model List<WebApplication3.Models.TopCustomerViewModel>

@{
    ViewBag.Title = "Top 5 Khách Hàng";
    Layout = "~/Areas/Admin/Views/Shared/_MainLayOutADMIN.cshtml";
}

<div style="margin: 30px auto; width: 50%; background-color: floralwhite; border-radius: 10px; padding: 20px; box-shadow: 2px 2px 10px rgba(0,0,0,0.1);">
    <h2 style="font-family: 'Times New Roman', Times, serif; color: #333; text-align: center;">Top 5 Khách Hàng Mua Nhiều Nhất</h2>
    <hr />

    <div class="table-responsive" style="max-width: 90%; margin: auto;">
        <table class="table table-bordered text-center" style="background-color: white; border-radius: 10px; width: 100%;">
            <thead style="background-color: #f8d7da; color: #721c24;">
                <tr>
                    <th style="width: 25%;">Tên Khách Hàng</th>
                    <th style="width: 25%;">Email</th>
                    <th style="width: 15%;">Số Điện Thoại</th>
                    <th style="width: 15%;">Tổng Số Đơn Hàng</th>
                
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            <a href="@Url.Action("Details", "Customers", new { id = item.CustomerID })" style="color: #007bff; text-decoration: none; font-weight: bold;">
                                @item.Name
                            </a>
                        </td>
                        <td>@item.Email</td>
                        <td>@item.Phone</td>
                        <td>@item.TotalOrders</td>
                     
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <p style="text-align: center; margin-top: 20px;">
        @Html.ActionLink("Quay lại", "Index", null, new { @class = "btn btn-secondary" })
    </p>
</div>
